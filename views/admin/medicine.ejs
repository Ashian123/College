<!-- Modal formsdata-->
<div
  class="modal fade"
  id="DataModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="DataModal"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">DATA ADD</h5>
        <input hidden id="selected_node" value="" />
