<!--Local Stuff-->
<script>
  jQuery(document).ready(function ($) {
    let ssr = `./../module/medicine/ssr`;
    let data_url = `./../module/medicine/handler`;
    let supplier_url = `./../module/supplier/handler`;
    let supplier = `./../module/supplier/getdata`;
    var index = $("#dataTable").find("th:last").index();
    var table = $("#dataTable").DataTable({
      processing: true,
      serverSide: true,
      lengthMenu: [
        [5, 10, 20, 25, 50, -1],
        [5, 10, 20, 25, 50, "All"],
      ],
      order: [[index - 1, "desc"]],
      ajax: {
        url: ssr,
        type: "POST",
      },
      columns: [
        { data: "name" },
        { data: "amount" },
        { data: "createdAt" },
        { data: "_id" },
      ],
      columnDefs: [
        {
          render: function (data, type, row) {
            pay_btn =
              "<button data-id = '" +
              data +
              "' class = 'btn btn-sm btn-outline-danger delete_data' title = 'delete payment type' ><i class='mdi menu-icon mdi-delete'></i></button>";

            pay_btn +=
              "<button data-id = '" +
              data +
              "' class = 'btn btn-sm btn-outline-info edit_data ml-1' title = 'edit payment type' ><i class='mdi menu-icon mdi-delete'></i></button>";

            return pay_btn;
          },
          targets: index,
        },
      ],
    }); // datatable ending...

    $("#dataTable").on("click", ".pay_data", function () {
      $("input[name='p_id']").val($(this).data("id"));
      $("#action").val("addData");
      $("#DataModal").modal("show");
    });

    $("#pay_data").html("");
    $.get(supplier, function (data, status) {
      data.map((e) => {
        var pay_data = document.getElementById("pay_data");
        var option = document.createElement("option");
        option.text = e.s_name;
        option.value = e._id;
        pay_data.add(option);
      });
    });

    $("#add_formsdata").on("click", function () {
      //$('#data_form')[0].reset();
      $("#action").val("addData");
      $(".modal-title").html("ADD DATA");
      $("#action").val("addData");
      $("#DataModal").modal("show");
      //data_modal.show();
    });

    $("#data_details").on("click", ".data_edit", function () {
      $("input[name='t_formsdata_title']").val($(this).data("title"));
      $("textarea[name='t_formsdata_description']").val(
        $(this).data("description")
      );
      $(".modal-title").html("EDIT DATA");
      $("#DataModal").modal("show");
      $("#data_id").val($(this).data("id"));
      $("#action").val("updateData");
    });

    $.post(
      supplier_url,
      {
        swtch: $("#action").val(),
        data_id: $("#data_id").val(),
        p_id: $("input[name='p_id']").val(),
      },
      function (data, status) {
        table.ajax.reload(null, false);
        $("#data_form")[0].reset();
        iziToast.success({
          id: "ERROR",
          title: data,
          position: "topRight",
          transitionIn: "bounceInRight",
        });
      }
    );

    $("#dataTable").on("click", ".delete_data", function () {
      $("#data_id").val($(this).data("id"));
      $("#action").val("change_status");
      iziToast.show({
        backgroundColor: "rgb(239, 35, 60, 60%)",
        progressBar: true,
        // color: 'dark',
        theme: "dark", //
        progressBarColor: "rgb(239, 35, 60)",
        overlay: true,
        displayMode: 1,
        pauseOnHover: false,
        timeout: false,
        message: "Are you sure ? ",
        position: "center",
        buttons: [
          [
            '<button class = "btn btn-danger">Delete</button>',
            function (instance, toast) {
              $("._submit_data").click();
              instance.hide({ transitionOut: "fadeOut" }, toast, "button");
            },
            true,
          ],
        ],
      });
    });
    $("#dataTable").on("click", ".edit_data", function () {
      $("#data_form")[0].reset();
      $("#action").val("updateData");
      $(".modal-title").html("EDIT DATA");
      let m_id = $(this).data("id");
      console.log(m_id);
      $("#data_id").val(m_id);
      $.post(
        data_url,
        {
          swtch: "get_medi_data",
          m_id: m_id,
        },
        function (data, status) {
          $("input[name='t_formsdata_name']").val(data.name);
          $("input[name='t_formsdata_amount']").val(data.amount);
          $("input[name='t_formsdata_strength']").val(data.strength),
            $("#pay_data").val(data.supplier_id),
            $("input[name='t_formsdata_batch_no']").val(data.batch_no),
            $("input[name='t_formsdata_form']").val(data.form),
            $("input[name='t_formsdata_box_size']").val(data.box_size),
            $("input[name='t_formsdata_trade_prize']").val(data.trade_prize),
            $("input[name='t_formsdata_mrp']").val(data.mrp),
            $("input[name='t_formsdata_box_prize']").val(data.box_prize),
            $("input[name='t_formsdata_product_details']").val(
              data.product_details
            ),
            $("input[name='t_formsdata_side_effect']").val(data.side_effect),
            $("input[name='t_formsdata_expire_date']").val(data.expire_date),
            $("input[name='t_formsdata_instock']").val(data.instock),
            $("input[name='t_formsdata_w_discount']").val(data.w_discount),
            $("input[name='t_formsdata_product_image']").val(
              data.product_image
            ),
            $("input[name='t_formsdata_short_stock']").val(data.short_stock),
            $("input[name='t_formsdata_favourite']").val(data.favourite),
            $("input[name='t_formsdata_date']").val(data.date),
            $("input[name='t_formsdata_discount']").val(data.discount),
            $("input[name='t_formsdata_sale_qty']").val(data.sale_qty),
            $("#DataModal").modal("show");
        }
      );
    });

    $("._submit_data,.confirm_delete").on("click", function () {
      console.log($("input[name='t_formsdata_name']").val());
      $.post(
        data_url,
        {
          name: $("input[name='t_formsdata_name']").val(),
          amount: $("input[name='t_formsdata_amount']").val(),
          strength: $("input[name='t_formsdata_strength']").val(),
          supplier_id: $("#pay_data").val(),
          batch_no: $("input[name='t_formsdata_batch_no']").val(),
          form: $("input[name='t_formsdata_form']").val(),
          box_size: $("input[name='t_formsdata_box_size']").val(),
          trade_prize: $("input[name='t_formsdata_trade_prize']").val(),
          mrp: $("input[name='t_formsdata_mrp']").val(),
          box_prize: $("input[name='t_formsdata_box_prize']").val(),
          product_details: $("input[name='t_formsdata_product_details']").val(),
          side_effect: $("input[name='t_formsdata_side_effect']").val(),
          expire_date: $("input[name='t_formsdata_expire_date']").val(),
          instock: $("input[name='t_formsdata_instock']").val(),
          w_discount: $("input[name='t_formsdata_w_discount']").val(),
          product_image: $("input[name='t_formsdata_product_image']").val(),
          short_stock: $("input[name='t_formsdata_short_stock']").val(),
          favourite: $("input[name='t_formsdata_favourite']").val(),
          date: $("input[name='t_formsdata_date']").val(),
          discount: $("input[name='t_formsdata_discount']").val(),
          sale_qty: $("input[name='t_formsdata_sale_qty']").val(),
          swtch: $("#action").val(),
          uid: $("#data_id").val(),
        },
        function (data, status) {
          iziToast.success({
            id: "ERROR",
            title: data,
            position: "topRight",
            transitionIn: "bounceInRight",
          });
          $("#dataTable").DataTable().draw();
          $("#data_form")[0].reset();
          $("#DataModal,#DeleteModal").modal("hide");
        }
      );
    });
  });
</script>

