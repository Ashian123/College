          <div class="form-group">
            <label for="exampleInputEmail1">Medicine Name</label>
            <input
              type="text"
              class="form-control"
              name="t_formsdata_name"
              placeholder="Name"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Medicine Amount</label>
            <input
              type="number"
              class="form-control"
              name="t_formsdata_amount"
              placeholder="amount"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Medicine St</label>
            <input
              type="number"
              class="form-control"
              name="t_formsdata_strength"
              placeholder="strength"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Supplier_Id</label>
            <select class="form-control" id="pay_data"></select>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Batch_no</label>
            <input
              type="number"
              class="form-control"
              name="t_formsdata_batch_no"
              placeholder="batch_no"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Form</label>
            <input
              type="text"
              class="form-control"
              name="t_formsdata_form"
              placeholder="form"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Box_size</label>
            <input
              type="number"
              class="form-control"
              name="t_formsdata_box_size"
              placeholder="box_size"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Trade_prize</label>
            <input
              type="number"
              class="form-control"
              name="t_formsdata_trade_prize"
              placeholder="trade_prize"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">MRP</label>
            <input
              type="number"
              class="form-control"
              name="t_formsdata_mrp"
              placeholder="mrp"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Box_prize</label>
            <input
              type="number"
              class="form-control"
              name="t_formsdata_box_prize"
              placeholder="box_prize"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Product_details</label>
            <input
              type="text"
              class="form-control"
              name="t_formsdata_product_details"
              placeholder="product_details"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Side_effect</label>
            <input
              type="text"
              class="form-control"
              name="t_formsdata_side_effect"
              placeholder="side_effect"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Expire_date</label>
            <input
              type="number"
              class="form-control"
